{
  "name": "discourse-graph",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "deploy": "turbo deploy",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "turbo": "^2.5.4",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindConfig": "./packages/tailwind-config/tailwind.config.ts"
  },
  "dependencies": {
    "posthog-js": "^1.203.1"
  },
  "//": "Roam Research still uses React 18",
  "overrides": {
    "@blueprintjs/core": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    },
    "@blueprintjs/datetime": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    },
    "@blueprintjs/select": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    },
    "roamjs-components": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    }
  }
}
