{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "passThroughEnv": [
        "RESEND_API_KEY",
        "OPENAI_API_KEY",
        "ANTHROPIC_API_KEY",
        "GEMINI_API_KEY",
        "NODE_ENV",
        "BLOB_READ_WRITE_TOKEN"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "types.gen.ts"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "passThroughEnv": [
        "OBSIDIAN_PLUGIN_PATH",
        "NODE_ENV",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "POSTGRES_URL",
        "OPENAI_API_KEY",
        "ANTHROPIC_API_KEY",
        "GEMINI_API_KEY"
      ],
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "deploy": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "passThroughEnv": [
        "BLOB_READ_WRITE_TOKEN",
        "GITHUB_REF_NAME",
        "GITHUB_HEAD_REF",
        "NODE_ENV",
        "SUPABASE_PROJECT_ID",
        "SUPABASE_DB_PASSWORD",
        "SUPABASE_ACCESS_TOKEN",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "POSTGRES_URL",
        "OPENAI_API_KEY",
        "ANTHROPIC_API_KEY",
        "GEMINI_API_KEY"
      ]
    },
    "publish": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "passThroughEnv": [
        "GITHUB_TOKEN",
        "APP_PRIVATE_KEY",
        "APP_ID",
        "NODE_ENV"
      ]
    }
  }
}
