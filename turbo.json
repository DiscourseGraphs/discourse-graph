{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "passThroughEnv": [
        "RESEND_API_KEY",
        "OPENAI_API_KEY",
        "ANTHROPIC_API_KEY",
        "GEMINI_API_KEY",
        "BLOB_READ_WRITE_TOKEN"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "passThroughEnv": ["OBSIDIAN_PLUGIN_PATH"],
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "deploy": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "passThroughEnv": [
        "BLOB_READ_WRITE_TOKEN",
        "GITHUB_REF_NAME",
        "GITHUB_HEAD_REF"
      ]
    },
    "publish": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "passThroughEnv": ["GITHUB_TOKEN", "APP_PRIVATE_KEY", "APP_ID"]
    }
  }
}
