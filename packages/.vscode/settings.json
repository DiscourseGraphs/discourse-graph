{
  "files.exclude": {
    "**/node_modules": true, // Hide dependencies
    "**/dist": true, // Hide build outputs
    "**/.turbo": true, // Hide turbo cache
    "**/.next": true, // Hide Next.js build
    "**/.vercel": true, // Hide vercel cache
    "**/.vscode": true, // Hide vscode cache
    "**/*.code-workspace": true // Hide code workspace files
  },
  "files.watcherExclude": {
    "**/target": true,
    "**/dist": true,
    "**/.turbo": true,
    "**/.next": true,
    "**/.vercel": true
  }
}
