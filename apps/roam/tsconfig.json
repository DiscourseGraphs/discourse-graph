{
  "extends": "@repo/typescript-config/react-library.json",
  "include": ["src", "src/types.d.ts", "tailwind.config.ts", "tests", "scripts"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": false,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["../../packages/ui/src/*"]
    },
    "jsx": "react",
    "noUncheckedIndexedAccess": false
  }
}
