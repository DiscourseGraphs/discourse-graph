{
  "extends": "@repo/typescript-config/react-library.json",
  "include": [
    "src",
    "src/types.d.ts",
    "tailwind.config.ts",
    "tests",
    "scripts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": false,
    "jsx": "react",
    "noUncheckedIndexedAccess": false,
    "types": ["react", "react-dom"],
    "paths": {
      "~/*": ["./src/*"],
      "react": ["./node_modules/@types/react"],
      "react-dom": ["./node_modules/@types/react-dom"]
    }
  }
}
